<project default="resolve" xmlns:ivy="antlib:org.apache.ivy.ant">
  
  <taskdef resource="org/apache/catalina/ant/catalina.tasks"/>
    
  <path id="compile.classpath">
    <fileset dir="lib/jars">
      <include name="*.jar"/>
    </fileset>
    <fileset dir="lib/bundles">
      <include name="*.jar"/>
    </fileset>
    <pathelement location="../lanthanum/bin"/>
  </path>
  
  <target name="init">
    <mkdir dir="build/bin"/>
    <mkdir dir="dist/lib"/>
  </target>
  
  <target name="resolve" depends="init">
    <ivy:retrieve pattern="lib/default/[type]s/[artifact]-[revision].[ext]" conf="default" refresh="true"/>
    <ivy:retrieve pattern="lib/container/[type]s/[artifact]-[revision].[ext]" conf="container" refresh="true"/>
    <ivy:retrieve pattern="lib/test/[type]s/[artifact]-[revision].[ext]" conf="test" refresh="true"/>
  </target>
  
  <target name="compile" depends="resolve">
    <javac srcdir="src" destdir="build/bin" target="1.7" source="1.7" debug="true">
      <classpath refid="compile.classpath"/>
    </javac>
  </target>
  
  <target name="dist" depends="compile">
    <jar jarfile="dist/lib/webb.jar" basedir="build/bin" includes="ch/kerbtier/**" />
  </target>
  
  <target name="publish-local" depends="dist" description="Publish this build into local repository">
    <ivy:resolve/>
    <ivy:publish pubrevision="1.0.1" status="release" resolver="local" forcedeliver="true" overwrite="true" conf="*">
      <artifacts pattern="dist/lib/[artifact].[ext]"/>
    </ivy:publish>
  </target>
</project>
